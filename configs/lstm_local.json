{
    "model": {
        "architecture": "LstmModel",
        "n_classes": 2,
        "lstm_hidden_size": 10,
        "num_lstm_layers": 1,
        "dropout": 0.3,
        "fine_tune_embeddings": false,
        "sentence_length_cut": 40,
        "use_regularization": "none",
        "regularization_lambda": 0.0001
    },
    "training": {
        "start_epoch": 0,
        "batch_size": 100,
        "lr": 1e-3,
        "lr_decay": 0.9,
        "momentum": 0.9,
        "workers": 8,
        "epochs": 30,
        "grad_clip": "none",
        "print_freq": 250,
        "checkpoint": "none",
        "save_checkpoint_freq_epoch": 1,
        "save_checkpoint_path": "./log_dir",
        "train_without_val": false,
        "weight_decay": 0.0
    },
    "dataset": {
        "dataset_dir": "../dataset",
        "rel_train_path": "train_small_split.csv",
        "rel_val_path": "val_small_split.csv",
        "rel_test_path": "test_cleaned.csv"
    }
}


